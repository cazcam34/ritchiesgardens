<%= form_for(@contact) do |f| %>
  <div class="form-error">
    <% if @contact.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="form-group-total">
    <div class="form-group row">
      <%= f.label :name, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
         <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
       <div class="col-sm-2"></div>
    </div>
    <div class="form-group row">
      <%= f.label :phonenumber, "Phone Number", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_field :phonenumber, class: 'form-control' %>
      </div>
       <div class="col-sm-2"></div>
    </div>
    <div class="form-group row">
       <%= f.label :message, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_area :message, class: 'form-control' %>
      </div>
       <div class="col-sm-2"></div>
    </div>
    <div class="g-recaptcha" data-sitekey="6LcV6J4UAAAAAHPpa9hq4r_FCPGuWO0ekp9kSdC5"></div>
    <div class="contact-button-mob">
        <div class="col-sm-5 contact-button-mob"></div>
        <%= f.submit "Send Enquiry", class: 'btn btn-success col-sm-2 btn-contact-page' %>
        <div class="col-sm-5"></div>
    </div>
  </div>
<% end %>

